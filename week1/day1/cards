# This code uses the import function of random.

import random

suits = ["Clubs", "Spades", "Hearts", "Diamonds"]
faces = ["Jack", "Queen", "King", "Ace"]
numbered =[2, 3, 4, 5, 6, 7, 8, 9, 10]

# Once you assign a variable a name then you can call it.

def draw():
  the_suit = random.choice(suits)
  the_card = random.choice(faces + numbered)
  return the_card, "of", the_suit

# This code will draw three cards.
print(draw())

print(draw())

print(draw())

#This code will loop and draw 5 cards.
for _in range(5)
print(draw())

